- model_class = Document
- current_title = page_title(action, model_class.model_name.human)
- title current_title, :admin
.page-header
  %h1= page_title(action, Document.model_name.human)
.row
  .col-lg-12
    = render 'layouts/web/admin/shared/messages', object: @document_form
.row
  .col-lg-6
    = simple_form_for [:admin, @document_form], input_html: { class: 'form-horizontal' } do |f|
      = f.button :submit, t('helpers.links.save'), class: 'btn-success'
      = link_to t('helpers.links.back'), admin_documents_path, class: 'btn btn-default'
      = f.input :title, as: :string
      = hint @document_form.model.class.to_s, :file
      = f.input :file, as: :attachment_preview
      = f.button :submit, t('helpers.links.save'), class: 'btn-success'
      = link_to t('helpers.links.back'), admin_documents_path, class: 'btn btn-default'
