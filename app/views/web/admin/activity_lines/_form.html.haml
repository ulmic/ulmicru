- model_class = ActivityLine
- current_title = page_title(action, model_class.model_name.human)
- title current_title, :admin
.page-header
  %h1= current_title
.row
  .col-lg-12
    = simple_form_for @activity_line, url: { controller: 'web/admin/activity_lines', action: action }, input_html: { class: 'form-horizontal' } do |f|
      = f.input :title, as: :string
      = f.input :description, as: :ckeditor
      = f.input :found_date, as: :date_picker
      = f.input :activity_type
      = f.input :state, input_html: { value: :active }, as: :hidden
      = f.association :creator, label_method: lambda { |user| "#{user.id} | #{user.first_name} #{user.last_name}" }, value_method: :id, required: true
      = f.button :submit, t('helpers.links.save'), class: 'btn-success'
      = link_to t('helpers.links.back'), admin_activity_lines_path, class: 'btn btn-default'
