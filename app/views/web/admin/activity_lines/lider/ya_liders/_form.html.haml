- model_class = ActivityLines::Lider::YaLider
- current_title = page_title(action, model_class.model_name.human)
- title current_title, :admin
.page-header
  %h1=t current_title
.row
  .col-lg-12
    = render 'layouts/web/admin/shared/messages', object: @ya_lider_form
.row
  .col-lg-12
    = simple_form_for [:admin, @ya_lider_form], input_html: { class: 'form-horizontal' } do |f|
      = f.button :submit, class: 'btn-success', value: t('helpers.links.save')
      = link_to t('helpers.links.back'), admin_activity_lines_lider_ya_liders_path, class: 'btn btn-default'
      = f.input :contest_year, as: :string
      = f.input :contest_number, as: :string
      = f.input :state_event, as: :state_event
      = f.input :provision, as: :ckeditor
      = f.label :fair_idea
      = f.simple_fields_for :activity_lines_lider_events_ya_liders do |ff|
        = ff.input :event_id, as: :select, collection: events_hash(@events), input_html: { class: :select2 }, label: false
      = f.button :submit, class: 'btn-success', value: t('helpers.links.save')
      = link_to t('helpers.links.back'), admin_activity_lines_lider_ya_liders_path, class: 'btn btn-default'
