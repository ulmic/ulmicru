- model_class = RedirectRule
- current_title = page_title(action, model_class.model_name.human)
- title current_title, :admin
.page-header
  %h1= page_title(action, RedirectRule.model_name.human)
.row
  .col-lg-12
    = render 'layouts/web/admin/shared/messages', object: @redirect_rule_form
.row
  .col-lg-6
    = simple_form_for [:admin, @redirect_rule_form], input_html: { class: 'form-horizontal' } do |f|
      = f.button :submit, t('helpers.links.save'), class: 'btn-success'
      = link_to t('helpers.links.back'), admin_redirect_rules_path, class: 'btn btn-default'
      = f.input :old_path, as: :string
      = f.input :redirect_to, as: :string
      = f.input :status
      = f.input :reason
      = f.button :submit, t('helpers.links.save'), class: 'btn-success'
      = link_to t('helpers.links.back'), admin_redirect_rules_path, class: 'btn btn-default'
