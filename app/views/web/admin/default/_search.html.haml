- if searchable_model?(model_class)
  .col-md-6
    .search
      = form_tag request.fullpath, method: :get do |f|
        .form-group.text
          .input-group
            = text_field_tag :search, params[:search], class: 'text form-control'
            %span.input-group-btn
              = submit_tag t('helpers.search')
