- title @test_paper.title, :admin
- model_class = TestPaper
.page-header
  %h1
    = @test_paper.title
    = link_to fa_icon(:pencil), edit_admin_test_paper_path(@test_paper), class: 'btn btn-warning'
    = link_to fa_icon(:remove), admin_test_paper_path(@test_paper), method: :delete, class: 'btn btn-danger'
.row
  .col-lg-12
    %table.table.attributes-table
      - @test_paper.show_attributes.each do |attribute|
        %tr
          %td= model_class.human_attribute_name attribute
          %td= @test_paper.send attribute
    %hr
    - if @test_paper.questions.any?
      %h4
        = t('.questions')
      %table.table.attributes-table
        - @test_paper.questions.active.decorate.each do |question|
          %tr
            %td
              - if question.user_id.present?
                - if question.user.is_member?
                  = link_to admin_member_path(question.user) do
                    = image_tag question.user.avatar.small
                    = question.user.decorate.short_name
                - elsif question.user.is_questionary?
                  = link_to admin_questionary_path(question.user) do
                    = image_tag question.user.avatar.small
                    = question.user.decorate.short_name
                - else
                  = link_to question.user.decorate.short_name, admin_questionary_path(question.user)
              - else
                = fa_icon 'user-secret 2x'
            %td
              = question.text 
            %td
              - if question.answer_link.present?
                = link_to question.answer_link, question.answer_link
            %td{ width: '96px' }
              - if question.is_answered?
                = link_to fa_icon(:pencil), edit_admin_test_paper_question_path(question, reason: :answer_timestamp), class: 'btn btn-warning'
              - else
                = link_to fa_icon('plus-square'), edit_admin_test_paper_question_path(question, reason: :answer_timestamp), class: 'btn btn-warning'
              = link_to fa_icon(:remove), admin_test_paper_question_path(question), method: :delete, class: 'btn tbtn-xs btn-danger pull-right'
