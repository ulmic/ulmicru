- model_class = TestPaper
- current_title = page_title(action, model_class.model_name.human)
- title current_title, :admin
.page-header
  %h1= page_title(action, TestPaper.model_name.human)
.row
  .col-lg-12
    = render 'layouts/web/admin/shared/messages', object: @test_paper_form
.row
  .col-lg-6
    = simple_form_for [:admin, @test_paper_form], input_html: { class: 'form-horizontal' } do |f|
      = f.button :submit, t('helpers.links.save'), class: 'btn-success'
      = link_to t('helpers.links.back'), admin_redirect_rules_path, class: 'btn btn-default'
      %br
      = f.input :title, as: :string
      = f.input :begin_date, as: :date_picker
      = f.input :end_date, as: :date_picker
      = f.input :record_type, as: :string, input_html: { value: :confession }, as: :hidden
      = f.input :record_id, as: :string, input_html: { value: 2016 }, as: :hidden
      = f.button :submit, t('helpers.links.save'), class: 'btn-success'
      = link_to t('helpers.links.back'), admin_redirect_rules_path, class: 'btn btn-default'
