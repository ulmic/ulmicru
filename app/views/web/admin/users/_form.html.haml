- current_title = page_title(action, User.model_name.human)
- title current_title, :admin
.page-header
  %h1= current_title
.row
  .col-lg-12
    = render 'layouts/web/admin/shared/messages', object: @user_form
.row
  .col-lg-12
    = simple_form_for [:admin, @user_form], input_html: { class: 'form-horizontal' } do |f|
      = f.input :first_name, as: :string
      = f.input :patronymic, as: :string
      = f.input :last_name, as: :string
      = f.input :email, as: :string, required: true
      = f.input :password, as: :string
      -#FIXME f.hint :role
      = f.input :role
      = f.input :state, as: :hidden, input_html: { value: :confirmed }
      = f.hint t('hints.admin.user.role')
      = f.button :submit, t('helpers.links.save'), class: 'btn-success'
      = link_to t('helpers.links.back'), admin_users_path, class: 'btn btn-default'
