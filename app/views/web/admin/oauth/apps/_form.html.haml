- model_class = Oauth::App
- current_title = page_title(action, model_class.model_name.human)
- title current_title, :admin
.page-header
  %h1= page_title(action, Oauth::App.model_name.human)
.row
  .col-lg-12
    = render 'layouts/web/admin/shared/messages', object: @app_form
.row
  .col-lg-6
    = simple_form_for [:admin, @app_form], input_html: { class: 'form-horizontal' } do |f|
      = f.button :submit, t('helpers.links.save'), class: 'btn-success'
      = link_to t('helpers.links.back'), admin_redirect_rules_path, class: 'btn btn-default'
      = f.input :title, as: :string
      = f.input :url, as: :string
      = f.input :client_id, as: :string
      = f.input :client_secret, as: :string, input_html: { value: (@app_form.client_secret || SecureRandom.hex(24)) }
      = f.input :callback_url, as: :string
      = f.button :submit, t('helpers.links.save'), class: 'btn-success'
      = link_to t('helpers.links.back'), admin_redirect_rules_path, class: 'btn btn-default'
