- model_class = Protocol
- current_title = page_title(action, model_class.model_name.human)
- title current_title, :admin
.page-header
  %h1= page_title(action, Protocol.model_name.human)
.row
  .col-lg-12
    = render 'layouts/web/admin/shared/messages', object: @protocol_form
.row
  .col-lg-6
    = simple_form_for [:admin, @protocol_form], input_html: { class: 'form-horizontal' } do |f|
      = f.button :submit, t('helpers.links.save'), class: 'btn-success'
      = link_to t('helpers.links.back'), admin_redirect_rules_path, class: 'btn btn-default'
      = f.input :title, as: :string
      = f.input :team_id, as: :select, collection: teams_hash(@teams), input_html: { class: :select2 }
      %br
      = f.label :scan
      .preview
        = image_tag @protocol_form.model.scan if @protocol_form.model.scan.present?
      = f.input :scan, as: :file, label: false, input_html: { style: 'display: none' }
      = f.input :scan, label: false, as: :jasny_file_preview_upload
      = f.input :document, as: :file
      = f.button :submit, t('helpers.links.save'), class: 'btn-success'
      = link_to t('helpers.links.back'), admin_redirect_rules_path, class: 'btn btn-default'
