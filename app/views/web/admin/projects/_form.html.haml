- model_class = Project
- current_title = page_title(action, model_class.model_name.human)
- title current_title, :admin
.page-header
  %h1= page_title(action, Project.model_name.human)
.row
  .col-lg-12
    = render 'layouts/web/admin/shared/messages', object: @project_form
.row
  .col-lg-6
    = simple_form_for [:admin, @project_form], input_html: { class: 'form-horizontal' } do |f|
      = f.button :submit, t('helpers.links.save'), class: 'btn-success'
      = link_to t('helpers.links.back'), admin_projects_path, class: 'btn btn-default'
      = f.input :title, as: :string
      = f.button :submit, t('helpers.links.save'), class: 'btn-success'
      = link_to t('helpers.links.back'), admin_projects_path, class: 'btn btn-default'
