= paginate feedbacks, theme: 'twitter-bootstrap-3'
- model_class = Feedback
%table.table.table-condensed.table-hover
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:url)
      %th= model_class.human_attribute_name(:user)
      %th= model_class.human_attribute_name(:text)
      %th= model_class.human_attribute_name(:created_at)
      - if searching?
        %th= model_class.human_attribute_name(:state)
      %th= t 'helpers.links.actions'
  %tbody
    - feedbacks.each do |feedback|
      %tr.link{ class: state_color(feedback), data: { href: edit_admin_feedback_path(feedback) } }
        %td= feedback.id
        %td= link_to feedback.url, feedback.url
        %td= feedback.user.short_name if feedback.user
        %td= feedback.text
        %td=l feedback.created_at
        - if searching?
          %td= feedback.human_state_name
        %td.actions
          = link_to edit_admin_feedback_path(feedback), class: 'btn btn-warning btn-xs' do
            %span.glyphicon.glyphicon-pencil
          = link_to admin_feedback_path(feedback), method: :delete, class: 'btn btn-xs btn-danger' do
            %span.glyphicon.glyphicon-remove
= paginate feedbacks, theme: 'twitter-bootstrap-3'
