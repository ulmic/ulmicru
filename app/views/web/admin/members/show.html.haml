- model_class = Member
- title @member.short_name, :admin
.page-header
  %h1
    = @member.full_name
    = link_to member_path(@member.ticket), class: 'btn btn-primary' do
      %span.glyphicon.glyphicon-share
    = link_to edit_admin_member_path(@member), class: 'btn btn-warning' do
      %span.glyphicon.glyphicon-pencil
    = link_to admin_member_path(@member), method: :delete, class: 'btn btn-danger' do
      %span.glyphicon.glyphicon-remove
.row
  .col-lg-3
    = image_tag @member.avatar.medium, style: 'width: 100%'
    %hr
    %table.table.attributes-table
      - @member.sites_attributes.each do |attribute|
        %tr
          %td= model_class.human_attribute_name attribute
          %td= @member.show_attribute attribute
  .col-lg-9
    %table.table.attributes-table
      - @member.real_attributes.each do |attribute|
        %tr
          %td= model_class.human_attribute_name(attribute)
          %td= @member.show_attribute attribute
    %h4
      = t('.positions_history')
    %table.table.attributes-table
      - @member.positions.decorate.each do |position|
        %tr
          %td= position.title
          %td= (l(position.begin_date, format: '%d.%m.%Y') if position.begin_date)
          %td= position.end_date_datetime
    %h4
      = t('.event_attendings')
    %table.table.attributes-tabl
      - @member.registrations.each do |registration|
        %tr
          %td= registration.event.title
          %td= registration.role_text
