- case params[:step]
- when '1'
  = simple_form_for @event_form, url: { controller: 'web/users/activity_lines/lider/ya_lider/events', action: action } do |f|
    = f.input :title, placeholder: t('activerecord.attributes.your_event.title'), label: false
    = f.input :description, placeholder: t('activerecord.attributes.your_event.description'), label: false, as: :text
    = f.input :main_photo
    = f.association :places, label_method: :title, value_method: :id
    = f.input :organizer_type, as: :hidden, input_html: { value: 'User' }
    = f.input :organizer_id, as: :hidden, input_html: { value: current_user.current_ya_lider_participant.id }
    = f.input :activity_line_id, as: :hidden, input_html: { value: ActivityLine.lider.id }
    = f.simple_fields_for :registrations do |erf|
      = erf.input :user_id, as: :select, collection: users_hash(@users), input_html: { class: :select2 }, label: false
- when '2'
  = simple_form_for @event_form, url: { controller: 'web/users/activity_lines/lider/ya_lider/events', action: action } do |f|
    = f.input :participant_id, as: :hidden, input_html: { value: current_user.current_ya_lider_participant.id }
    = f.simple_fields_for :fields do |ff|
      = ff.input :field_type, as: :hidden, input_html: { value: :text }
      = ff.input :value
      = ff.input :title, as: :hidden, input_html: { value: title }
    = f.button :submit, class: 'btn btn-success'
