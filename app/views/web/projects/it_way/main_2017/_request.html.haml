%section#request.request
  .row
    .medium-8.medium-centered.columns
      %h2.text-center Заявка
      = simple_form_for Projects::ItWay::V2017::ParticipantForm.new(Project::Record.new), url: api_projects_records_path, method: :post, remote: true, input_html: { class: 'form-horizontal' } do |f|
        = f.input :last_name, as: :string
        = f.input :first_name, as: :string
        = f.input :patronymic, as: :string
        = f.input :birth_date, as: :date_picker
        = f.input :email, as: :string, required: true
        = f.input :phone, as: :string
        = f.input :region, collection: RussiaRegions.name_list
        = f.input :locality, as: :string
        = f.input :school, as: :string
        = f.input :group, as: :string
        = f.input :activity_line
        = f.input :experience, as: :string
        = f.input :reason, as: :string
        = f.input :has_i_note, as: :string
        = f.button :submit, "ПОДАТЬ ЗАЯВКУ", class: 'text-center btn btn-dark btn-lg'
