- vote ||= false
.confessions_of_the_year{ id: "confession_#{year}" }
  .year_text
    = year
  .people
    - if number_one_of_the_year.any?
      .number_one_name
        = image_tag number_one_image
        %span
          = nomination
        %br
        .nomination
          = t('.number_one_of_the_year')
      - number_one_of_the_year.each do |confession|
        - attributes = (confession.member_id == current_user&.id) ? { class: (:petition if vote), data: { id: confession.id, 'reveal-id' => ('argumentsModal' if vote) } } : { class: :my_own_petition }
        .member{ attributes }
          = render 'layouts/web/elements/mic_member_2',
            link: (('#' if vote) || ('' if confession.member.state != 'confirmed') || member_path(confession.member.ticket)),
            img_src: confession.member.avatar.element.url,
            name: confession.member.short_name
  .people
    - if debut_of_the_year.any?
      .debut_name
        = image_tag debut_image
        %span
          = nomination
        %br
        .nomination
          = t('.debut_of_the_year')
      - debut_of_the_year.each do |confession|
        - attributes = (confession.member_id == current_user&.id) ? { class: (:petition if vote), data: { id: confession.id, 'reveal-id' => ('argumentsModal' if vote) } } : { class: :my_own_petition }
        .member{ attributes }
          = render 'layouts/web/elements/mic_member_2',
            link: (('#' if vote) || ('' if confession.member.state != 'confirmed') || member_path(confession.member.ticket)),
            img_src: confession.member.avatar.element.url,
            name: confession.member.short_name
