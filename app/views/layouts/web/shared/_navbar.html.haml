.main-navbar-container
  %nav.top-bar{ data: { topbar: '' } }
    %section.top-bar-section
      .container-big
        %ul.right
          - if signed_in?
            - if current_user.role.in? [ 'admin', 'tech_admin' ]
              %li
                = link_to admin_path do
                  .inner
                    %i.fa.fa-info-circle
                    = @notification_count
            - if current_user.is_user? && current_user.unviewed? && !current_user.email.present?
              %li
                = link_to account_path do
                  .inner
                    %i.fa.fa-info
                    = t('.your_account_is_not_active')
          - else
            %li.icons-container
              .sign-in
                = t('helpers.sign_in')
              .icons
                = link_to auth_path(:vkontakte, url: request.env['ORIGINAL_FULLPATH']) do
                  .icon-vkontakte.min-icon
                = link_to auth_path(:twitter, url: request.env['ORIGINAL_FULLPATH']) do
                  .icon-twitter.min-icon
                = link_to auth_path(:facebook, url: request.env['ORIGINAL_FULLPATH']) do
                  .icon-facebook.min-icon
                = link_to new_session_path(url: request.env['ORIGINAL_FULLPATH']) do
                  .icon-door.min-icon
          %li.banner-container
            - if signed_in?
              .banner.signed-in
                .user-name
                  = current_user.decorate.short_name
                .icons-container
                  .icons
                    - if current_user.is_member?
                      - if current_user.confirmed?
                        -#= link_to member_path(current_user.ticket), title: t('layouts.web.shared.navbar.member_profile') do
                          - if current_user.is_man?
                            .icon-man.min-icon
                          - else
                            .icon-woman.min-icon
                        = link_to '#', data: { dropdown: 'member-dropdown', options: 'align:left;is_hover:true' }, aria: { controls: 'member-dropdown', expanded: false }, class: 'icon-bars min-icon fa-icon' do
                          = fa_icon :bars
                        %ul#member-dropdown.f-dropdown.medium{ 'data-dropdown-content' => true, 'aria-hidden' => "true",  tabindex: "-1"  }
                          %li
                            = link_to member_path(current_user.ticket), title: t('layouts.web.shared.navbar.my_profile') do
                              %span.icon{ style: 'font-size: 20px; margin-top: 5px' }
                                - if current_user.is_man?
                                  = fa_icon :male
                                - else
                                  = fa_icon :female
                              %span
                                = t('layouts.web.shared.navbar.my_profile')
                          %li
                            = link_to article_path(configus.articles.contact_list), title: t('layouts.web.shared.navbar.contact_list') do
                              %span.icon
                                = fa_icon 'th-list'
                              %span
                                = t('layouts.web.shared.navbar.contact_list')
                          - if @led_teams&.any?
                            %li
                              %h6
                                %span.icon
                                  = fa_icon :legal
                                %span
                                  = t('.my_teams')
                            %hr
                            - @led_teams.each_with_index do |team, index|
                              %li.team{ style: "#{'margin-top: 10px;' if index == 0 }"}
                                = link_to edit_members_team_path(team) do
                                  %span.icon
                                    - if team.publicity.visible?
                                      = fa_icon :eye
                                    - else
                                      = fa_icon 'eye-slash'
                                  %span
                                    = team.full_title
                    .icon-cogwheel.min-icon.link{ data: { href: account_path }, title: t('layouts.web.shared.navbar.account') }
                    = link_to session_path(url: request.env['ORIGINAL_FULLPATH']), method: :delete, title: t('helpers.sign_out') do
                      .icon-log-out.min-icon.link
            - else
              .banner
                .text
                  Жизнь
                  %br
                  в стиле миц
          %li
            = link_to article_path(configus.articles.contacts) do
              .inner
                = t('helpers.contacts')
          %li
            %a{ href: "#" }
        %a.site-logo{ href: root_path }
        %ul.left
          %li.has-dropdown.dropdown-category-menu
            %a{ href: '#' }
              .inner
                Миц - это ...
            %ul.dropdown
              #category_menu.category-menu
                - if @first_category.present?
                  .category-column
                    .menu-title
                      = @first_category.name
                    - @first_category.articles.visible.confirmed.each do |article|
                      = link_to article.title, article_path(article)
                - if @about_site_category.present?
                  .category-column
                    .menu-title
                      = @about_site_category.name
                    - @about_site_category.articles.visible.confirmed.each do |article|
                      = link_to article.title, article_path(article)
                - if @corporative_category.present?
                  .category-column
                    .menu-title
                      = @corporative_category.name
                    - @corporative_category.articles.visible.confirmed.each do |article|
                      = link_to article.title, article_path(article)
          %li{ style: 'margin-right: 15px' }
            - if signed_in? && current_user.state == 'confirmed'
              = link_to '#', data: { 'reveal-id' => 'feedbackModal' } do
                .inner
                  Нашли ошибку?
          - if @month_article.present?
            %li
              = link_to article_path(@month_article) do
                .inner
                  Август 2015
          - if confession_events_during?
            %li
              = link_to activity_lines_corporative_petitions_path do
                .inner
                  = image_tag 'organization/activity_lines/corporative/confession/number_one.png', class: 'custom-icon'
                  Признание
          %li
            = link_to configus.it_projects.karamzin.url, class: :blank do
              .inner
                = t(configus.it_projects.karamzin.short_name)
